<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:weightSum="10"
		tools:context="com.example.vicky.e_coin.payment_utility">
	<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="0dp" app:layout_constraintLeft_toLeftOf="parent"
			android:layout_weight="5"
			app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="parent"
			android:id="@+id/prepaid_container">
		<fragment
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:name="com.example.vicky.e_coin.utilityfrag"
				android:id="@+id/utilityfrag"/>
	</FrameLayout>
	<FrameLayout
			android:layout_width="match_parent"
			android:layout_weight="5"
			android:layout_height="0dp" app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			android:id="@+id/postpaid_container">

		<fragment
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:name="com.example.vicky.e_coin.utilityfrag1"
				android:id="@+id/utilityfrag1"/>
	</FrameLayout>

</LinearLayout>
