<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             tools:context="com.example.vicky.e_coin.postpaid">
	<com.rengwuxian.materialedittext.MaterialEditText android:layout_width="350dp"
	                                                  android:layout_height="wrap_content"

	                                                  android:id="@+id/postpaid_number"
	                                                  android:hint="NUMBER"
	                                                  android:inputType="text"
	                                                  app:met_textColorHint="@color/signuptext"
	                                                  app:met_iconPadding="1px"
	                                                  app:met_iconRight="@drawable/ic_phone_number"
	                                                  app:layout_constraintLeft_toLeftOf="parent"
	                                                  app:layout_constraintRight_toRightOf="parent"
	                                                  app:layout_constraintTop_toTopOf="parent"
	                                                  android:layout_marginTop="44dp"
	                                                  app:layout_constraintHorizontal_bias="0.491"/>
	<com.rengwuxian.materialedittext.MaterialEditText android:layout_width="350dp"
	                                                  android:layout_height="wrap_content"
	                                                  android:hint="CARRIER"
	                                                  android:inputType="text"
	                                                  app:met_textColorHint="@color/signuptext"
	                                                  app:met_iconPadding="1px"
	                                                  app:met_iconRight="@drawable/ic_carrier"
	                                                  app:layout_constraintLeft_toLeftOf="parent"
	                                                  app:layout_constraintRight_toRightOf="parent"
	                                                  android:id="@+id/materialEditText" android:layout_marginTop="16dp"
	                                                  app:layout_constraintTop_toBottomOf="@+id/postpaid_number"
	                                                  app:layout_constraintHorizontal_bias="0.491"/>
	<com.rengwuxian.materialedittext.MaterialEditText android:layout_width="350dp"
	                                                  android:layout_height="wrap_content"
	                                                  android:hint="BILL NUMBER"
	                                                  android:inputType="text"
	                                                  app:met_textColorHint="@color/signuptext"
	                                                  app:met_iconPadding="1px"
	                                                  app:met_iconRight="@drawable/ic_bill"
	                                                  app:layout_constraintLeft_toLeftOf="parent"
	                                                  app:layout_constraintRight_toRightOf="parent"
	                                                  android:id="@+id/materialEditText1"
	                                                  app:layout_constraintHorizontal_bias="0.491"
	                                                  android:layout_marginTop="16dp"
	                                                  app:layout_constraintTop_toBottomOf="@+id/materialEditText"/>
	<Button
			android:text="Submit"
			android:layout_width="350dp"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
			android:id="@+id/postpaidonclick"
			android:background="@drawable/bg_aqua"
			app:layout_constraintHorizontal_bias="0.491"
			android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/materialEditText1"/>
</android.support.constraint.ConstraintLayout>
